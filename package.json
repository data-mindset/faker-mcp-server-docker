{
  "name": "faker-mcp-server",
  "version": "0.0.2",
  "description": "MCP server to get fake strings",
  "author": "Kento Haneda <kento@hane.dad>",
  "type": "module",
  "license": "MIT",
  "bin": {
    "faker-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "shx rm -rf build && tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\" && node -e \"require('fs').chmodSync('build/http-index.js', '755')\"",
    "start": "node build/http-index.js",
    "dev": "npm run build && npm start",
    "format": "biome format",
    "format:fix": "biome format --unsafe --write",
    "lint": "biome check",
    "lint:fix": "biome check --unsafe --write",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "bun run build && npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@modelcontextprotocol/sdk": "1.10.1",
    "chalk": "^5.4.1",
    "express": "^4.21.2",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@vitest/coverage-v8": "^3.1.1",
    "shx": "^0.4.0",
    "typescript": "^5.3.3",
    "vitest": "^3.1.1"
  }
}
